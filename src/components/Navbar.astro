---
const foto = "/logo.jpg"; // coloque sua imagem em /public
---

<header class="bg-white/90 backdrop-blur sticky top-0 z-50 border-b border-slate-100">
  <div class="container-site flex items-center justify-between h-16">
    <a href="#inicio" class="flex items-center gap-3">
      <img
        src={foto}
        alt="Lar Recanto do Amanhecer"
        class="h-12 w-[160px] rounded-full object-cover"
        loading="eager" decoding="async"
      />
      <span class="sr-only">Lar Recanto do Amanhecer</span> <!-- acessibilidade -->
    </a>

    <nav class="hidden md:flex items-center gap-8 text-slate-700">
      <a href="#inicio" class="hover:text-[var(--brand-600)]">Início</a>
      <a href="#sobre" class="hover:text-[var(--brand-600)]">Sobre Nós</a>
      <a href="#servicos" class="hover:text-[var(--brand-600)]">Serviços</a>
      <a href="#depoimentos" class="hover:text-[var(--brand-600)]">Depoimentos</a>
    </nav>

    <a href="#contato" class="btn btn-primary">Agendar Visita</a>
  </div>
</header>
