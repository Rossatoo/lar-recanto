---
const fotos = [
  { src: "eventos/aniversarioglenio.jpg", alt: "Aniversários" },
  { src: "eventos/aniversariovilma.jpg", alt: "Aniversário da Vilma" },
  { src: "eventos/aniversarios1.jpg", alt: "Aniversários" },
  { src: "eventos/aniversarios.jpg", alt: "aniversarios" },
  { src: "eventos/apresentacaoinvernada.jpg", alt: "Apresentação da Invernada" },
  { src: "eventos/pinturalar.jpg", alt: "Pintura no Lar" }

];
// Dica: coloque suas imagens em /public/eventos/ e ajuste os nomes acima.
---

<section id="eventos" class="py-20 bg-white/60 border-y">
  <div class="container-site">
    <h2 class="h2 text-center mb-4">Eventos</h2>
    <p class="text-center text-slate-600 max-w-2xl mx-auto mb-12">
      Momentos especiais que celebram a vida, a convivência e o cuidado.
    </p>

    <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3">
      {fotos.map((f, i) => (
        <button
          class="group relative overflow-hidden rounded-2xl border border-slate-100 focus:outline-none"
          data-full={f.src}
          aria-label={"Ampliar " + f.alt}
        >
          <img src={f.src} alt={f.alt} class="h-56 w-full object-cover transition group-hover:scale-105" loading="lazy"/>
          <div class="absolute bottom-0 inset-x-0 bg-black/40 text-white text-sm px-3 py-2 flex items-center justify-between">
            <span class="truncate">{f.alt}</span>
            <span class="opacity-80"></span>
          </div>
        </button>
      ))}
    </div>

    <!-- Lightbox com <dialog> nativo -->
    <dialog id="galleryDialog" class="backdrop:bg-black/70 p-0 rounded-2xl">
      <div class="relative">
        <img id="galleryImg" src="" alt="" class="max-h-[80vh] w-auto object-contain rounded-2xl"/>
        <button id="galleryClose"
          class="absolute top-3 right-3 btn btn-ghost bg-white/90">Fechar</button>
      </div>
    </dialog>

    <script is:inline>
      const dialog = document.getElementById('galleryDialog');
      const imgEl  = document.getElementById('galleryImg');
      const close  = document.getElementById('galleryClose');

      document.addEventListener('click', (e) => {
        const btn = e.target.closest('button[data-full]');
        if (!btn) return;
        const src = btn.getAttribute('data-full');
        const alt = btn.getAttribute('aria-label') || '';
        imgEl.src = src; imgEl.alt = alt;
        dialog.showModal();
      });
      close.addEventListener('click', () => dialog.close());
      dialog.addEventListener('click', (e) => {
        if (e.target === dialog) dialog.close(); // fecha ao clicar fora
      });
    </script>
  </div>
</section>
